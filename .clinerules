SWE_DEBUGGING=complex
ESCALATION_PATH=dev->swe->po
DOCUMENTATION_REQUIRED=true

## Feature Implementation
[features]
FLOW=re->po->swe->dev->pm
APPROVAL_REQUIRED=true
DOCUMENTATION_REQUIRED=true
PATTERN_COMPLIANCE=required

